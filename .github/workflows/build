name: Build
run-name: ${{ github.actor }} is build.

on:
  push:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout Branch
      uses: actions/checkout@v4
    - name: Set up Java
      uses: actions/setup-java@v4
      with:
        java-version: "21"
        distribution: "temurin"

    - name: Clean Project
      uses: ./gradlew clean

    - name: Setup Gradle
      uses: gradle/actions/setup-gradle@v3

    - name: Test Project
      uses: ./gradlew test

    - name: Build with Gradle
      run: ./gradlew build